<div class='container'>
  <div class='row'>
    <div class="col-lg-5 px-sm-0 mx-auto">
      <h2>Create Group</h2>
      <%= form_with model: @group, local:true do |f| %>
      <div class="form-group">
        <label for="group_name">グループ名</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="group_introducion">紹介文</label>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="inputImage">グループ画像</label>
        <%= f.attachment_field :image, class: 'form-control-file' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' , class: 'btn btn-info' %>
      </div>
      <% end %>
    </div>
  </div>
</div>